extends layout.pug

block main
    h1= pageTitle
    if(action)
        h3.message '#{title}' was #{action}.
    p
        a.button(href='books/new') Create New Book
    table
        thead
            tr
            th Title
            th Author
            th Genre
            th Year
        tbody
            each book in books
                tr
                    td
                        a(href=`/books/${book.id}`)= book.title
                    td= book.author
                    td= book.genre
                    td= book.year